view, image, text, text, scroll-view {
  box-sizing: border-box;

  font-family:"webfont" !important;
  font-size:16px;font-style:normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;

  
  /* var(--main-text-color) */
  --main-text-color: #181441;
  /* var(--vice-text-color) */
  --vice-text-color: #9f9f9f;
  
  --Promotion-text-color: #e09040;
  /* var(--goodPrice-text-color) */
  --goodPrice-text-color: #e75247;
}
.container {
  z-index: 1000;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  width: 100%;
  height: 100%;

  padding-top: 300rpx;
  position: fixed;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  background-color: rgba(0, 0, 0, 0.2);
  color: #181441;

  animation: emerge_1 0.4s ease-in-out 0s 1;
}
  /* container_emerge: name; 1s: duration; ease-in-out: timing-function; 0s: delay; 1: iteration-count; forwards: fill-mode 
  animation: container_before_emerge 1s ease-in-out 0s 1 forwards; */
@keyframes emerge_1 {
  0% {
    background-color: rgba(0, 0, 0, 0);
    color: #18144100;
  }
  100% {
    background-color: rgba(0, 0, 0, 0.2);
    color: #181441;
  }
}
.board {
  background-color: rgb(255, 255, 255);

  width: fit-content;
  height: fit-content;
  padding: 0 120rpx 44rpx;
  border-radius: 46rpx;

  margin: auto;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  
  animation: emerge_2 1s ease-in-out 0s 1;
}
@keyframes emerge_2 {
  0% {
    background-color: rgba(255, 255, 255, 0);
  }
  100% {
    background-color: rgba(255, 255, 255, 255);
  }
}
.titleBox {
  padding: 34rpx 0 0;
}
.title {
  font-size: 36rpx;
}
.avatarBox {
  padding: 34rpx 0 40rpx;
}
.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  /* background-color: green; */
  opacity: 1;
  
  animation: emerge_5 1s ease-in-out 0s 1;
}
@keyframes emerge_5 {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}
.nicknameIptBox {
  padding-bottom: 28rpx;
}
.nicknameIpt {
  width: 400rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #eee;
  box-shadow: 1px 1px 4px 1px rgba(0, 0, 0, 0.05) inset;

  text-align: center;

  font-size: 32rpx;
  color: #181441;
}
.nicknameBox {
  padding-bottom: 20rpx;
}
.nickname {
  text-align: center;
  font-size: 32rpx;
  color: #181441;
}
.allBtnBox {
  display: flex;
  flex-direction: row;
}
.tip {
  font-size: 24rpx;
  padding-bottom: 26rpx;
  color: #888;
  
  animation: emerge_3 1s ease-in-out 0s 1;
}
@keyframes emerge_3 {
  0% {
    color: rgba(136, 136, 136, 0);
  }
  100% {
    color: #888;
  }
}
.btnBoxGap {
  width: 50rpx;
}
.btnBox {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}
.btnBox:active {
  padding-top: 16rpx;
  padding-bottom: 4rpx;
}
.confirmBtn {
  display: block;
  padding: 22rpx 50rpx 22rpx;

  font-size: 36rpx;

  border-radius: 26rpx;
  background: #4cd151;
  /* border: 2px solid rgba(0, 0, 0, 0.089); */
  /* box-shadow: h v blur spread color inset */
  box-shadow: 2px 2px 8px 2px rgba(0, 0, 0, 0.1) ;
  
  animation: emerge_4 1s ease-in-out 0s 1;
}
@keyframes emerge_4 {
  0% {
    background: #4cd15100;
    box-shadow: 2px 2px 8px 2px rgba(0, 0, 0, 0) ;
  }
  100% {
    background: #4cd151;
    box-shadow: 2px 2px 8px 2px rgba(0, 0, 0, 0.1) ;
  }
}
.confirmBtn:active {
  background: #6aec6e;
  box-shadow: 1px 1px 4px 1px rgba(0, 0, 0, 0.1) ;
  color: #342c88;
}
.CancelBtn {
  display: block;
  padding: 22rpx 50rpx 22rpx;

  font-size: 36rpx;

  border-radius: 26rpx;
  background: #dcdcdc;
  /* border: 2px solid rgba(0, 0, 0, 0.089); */
  /* box-shadow: h v blur spread color inset */
  box-shadow: 2px 2px 8px 2px rgba(0, 0, 0, 0.1) ;
}
.CancelBtn:active {
  background: #ececec;
  box-shadow: 1px 1px 4px 1px rgba(0, 0, 0, 0.1) ;
  color: #342c88;
}



<view class="cardBox">
  <view class="board">

    <view class="column_PreviewImgAndTextInfo" bind:tap="onToDeviceDetail" data-deviceProfile="{{deviceProfile}}">
      <view class="columnPreviewImg">
        <image src="{{deviceProfile.previewImgUrl}}" mode="heightFix" class="previewImg"/>
      </view>

      <view class="columnTextInfo">
        <view class="rowNickName">
          <text class="nickname">{{deviceProfile.deviceName != null || '' ? deviceProfile.deviceName : deviceProfile.productName}}</text>
        </view>
        <view class="rowPosition">
          <text class="position">
            {{deviceProfile.regionName ? deviceProfile.regionName : '未分配Region'}}
          </text>
        </view>
      </view>
    </view>

    <view class="columnBtns">
      <block wx:for="{{columnBtnsArr}}" wx:key="bindtap">
        <view class="columnBtn" bind:tap="{{item.bindtap}}" data-deviceProfile="{{deviceProfile}}">
          <image src="{{item.imageSrc}}" mode="heightFix" class="btnIcon"/>
        </view>
      </block>
    </view>

  </view>
</view>
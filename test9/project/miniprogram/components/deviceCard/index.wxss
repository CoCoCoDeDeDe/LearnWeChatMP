.cardBox{
  padding: 10px 12px;
}
.board{
  border-radius: 15px;
  background: #fcfcfc;
  box-shadow: 2px 2px 8px 2px #0000000e;

  padding: 10px 10px 10px 14px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.column_PreviewImgAndTextInfo{
  display: flex;
  direction: row;
  justify-content: flex-start;
  align-items: center;
}
.columnPreviewImg{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.previewImg {
  display: flexbox;
  height: 60px;
}

.columnTextInfo{
  padding: 5px 0px 5px 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.rowNickName{
  display: flex;

}
.nickname{
  white-space: nowrap;
  font-size: 16px;
  color: var(--main-text-color);
}
.rowPosition{
  display: flex;

}
.position{
  white-space: nowrap;
  font-size: 12px;
  color: #9f9f9f;
}

.columnBtns{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.columnBtn{
  padding: 15px 5px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.btnIcon{
  display: flex;
  height: 20px;
}
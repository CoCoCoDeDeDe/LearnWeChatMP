/* Inner Add UniIO */
.Card1x1_Add_1Row1{
  position: relative;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-wrap: nowrap;
}
.Card1x1_Add_1Row1_Txt{
  z-index: 11;

  font-size: 20px;
  font-weight: 800;

  color: Var(--main-text-color);

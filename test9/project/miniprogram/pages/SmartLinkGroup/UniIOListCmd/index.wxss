.Card1x1_Add_1Row2{

}
/* Inner UniIO Profile */
.Card1x1_UniIO_1Row1{
  flex: 4 4 auto;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* flex-wrap: nowrap; */
  padding-top: 10px;
  padding-bottom: 0;
  padding-left: 10px;
  padding-right: 10px;
  
  /* filter: blur(0px); */
  font-size: 18px;
  font-weight: 800;
  color: var(--main-text-color);
}
.Card1x1_UniIO_1Row2{
  flex: 1 1 auto;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* flex-wrap: nowrap; */
  padding-top: 0;
  /* padding-bottom: 8px; */
  padding-left: 0;
  padding-right: 0;
  
  /* filter: blur(0px); */
  font-size: 15px;
  color: var(--vice-text-color);
}
.Card1x1_UniIO_1Row3{
  flex: 1 1 auto;
  width: 90%;

  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  /* flex-wrap: nowrap; */
  padding-top: 0;
  /* padding-bottom: 8px; */
  padding-left: 0;
  padding-right: 0;
}

.Card1x1_UniIO_1Row3_BtnBox{
  border-radius: 6px;
  background-color: #eee;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 6px 8px;
}
.Card1x1_UniIO_1Row3_BtnBox:active{
  background: linear-gradient(145deg, #f6f6f6 30%, #f5f5f5);
  /* background: #fff; */
  transform: scale(0.98);
}
.Card1x1_UniIO_1Row3_BtnImg{
  --BtnImg-edge-length: 18px;
  width: var(--BtnImg-edge-length);
  height: var(--BtnImg-edge-length);
}


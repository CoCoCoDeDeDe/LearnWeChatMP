.page{
  width: 100%;
  height: 100vh;

  background-color: #fdfdfd;
}
.attachCardBox{
  padding: 6px;
  
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
}
.board{
  border-radius: 30px;
  box-shadow: 1px 1px 8px 2px #0000000e;
  background-color: #fff;
  
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: flex-start;
}
.tip{
  padding: 10px 20px;

  font-size: 17px;
}
.iptBox{
  width: 100%;
  padding: 0 12px;
}
.ipt{
  display: block;
  height: 100%;
  width: 100%;

  padding: 4px 10px;

  background-color: #fafafa;
  border-radius: 20px;
  box-shadow: 1px 1px 4px 2px #0000000a inset;

  font-size: 17px;
}
.confirmBtn{
  --height: 46px;

  margin: 20px auto 14px;

  width: 90%;
  height: var(--height);

  text-align: center;
  line-height: var(--height);
  font-size: 19px;

  border-radius: 14px;
  background-color: #05be74;
}
.confirmTxt{
  text-align: inherit;
  line-height: inherit;
  font-size: inherit;

}
.confirmBtn:active{
  background-color: #12ce83;
}